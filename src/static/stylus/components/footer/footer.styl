.footer__inner
    bgColor = #eeeeee;
    padding: 30px 0 24px 0;
    background-color: bgColor;

.footer__main::after
    content: '';
    display: block;
    clear: both;

.footer__copy
    float: left;

.copy__footer__text
    font: 15px / 18px openSansLight;
    word-spacing: 4px;
    color: primaryGrey;

.footer__nav
    float: right;

.nav-footer__link
    font: 14px / 1 montserratBold;
    text-transform: uppercase;
    color: primaryBlack;
    &:hover
        text-decoration: underline;

.nav-footer__link:not(:last-child)
    margin-right: 17px;