.dist__inner
    bgColor = #eeeeee;
    padding: 57px 0 69px 0;
    background-color: bgColor;

.dist__header
    margin-bottom: 35px;

.dist__title
    margin-bottom: 7px;
    font: 16px / 1 montserratBold;
    text-transform: uppercase;
    color: primaryBlack;

.dist__subtitle
    font: 15px / 1 openSansLight;
    word-spacing: 3px;
    color: primaryGrey;

.dist__col
    display: inline-block;
    width: 240px;
    text-align: left;

.dist__col:not(:last-child)
    margin-right: 1.3%;

.article-dist__img-wrap
    height: 200px;

.article-dist__img
    max-width 100%;
    height: 100%;

.article-dist__cont
    padding: 20px 21px 14px 21px;
    background-color: primaryWhite;

.article-dist__title
    margin-bottom: 10px;
    font: 14px / 1 montserratBold;
    word-spacing: 0;
    text-transform: uppercase;
    color: primaryBlack;

.article-dist__text
    font-size: 13px;
    line-height: 20px;